<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#000000" />

    <LinearLayout
        android:id="@+id/viewGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/viewpager"
        android:layout_below="@+id/main_tv2"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:gravity="center|center_vertical"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/main_tv2"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:singleLine="false"
        android:layout_marginTop="0dp"
        android:paddingBottom="30dp"
        android:gravity="center"
        android:background="#00000000"
        android:lines="4"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
            android:text="初始化中..."/>
	
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:layout_marginBottom="150dp"
        android:layout_marginLeft="150dp"
        android:contentDescription="@string/image_contentDescription"
        android:layout_marginRight="150dp"
        android:layout_marginTop="@dimen/main_imageView3_margintop"
        android:background="#00000000"
        android:src="@drawable/title2" />

    <Button
        android:id="@+id/main_btn2"
        android:layout_width="750dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_btn1"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:layout_marginTop="25dp"
        android:background="#FFFFFF"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/main_button2"
        android:textSize="@dimen/main_btnsize" />

    <Button
        android:id="@+id/main_btn1"
        android:layout_width="750dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewGroup"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:layout_marginTop="80dp"
        android:background="#FFFFFF"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/main_button1"
        android:textSize="@dimen/main_btnsize" />

</RelativeLayout>