<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:layout_marginTop="15dp">

    <ImageView
        android:id="@+id/iv_screening"
        android:background="#000000"
        android:layout_width="230dp"
        android:contentDescription="@string/image_contentDescription"
        android:layout_height="230dp" />

    <ImageView
        android:id="@+id/iv1_screening"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/image_contentDescription"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/icon_information" />

    <TextView
        android:id="@+id/tv_screening"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/iv_screening"
        android:layout_alignTop="@+id/iv_screening"
        android:textColor="#5d5d5d"
        android:textSize="@dimen/Screen_textsize1"/>

    <TextView
        android:id="@+id/tv1_screening"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_screening"
        android:layout_below="@+id/tv_screening"
        android:layout_marginTop="10dp"
        android:textColor="#5d5d5d"
        android:textSize="@dimen/Screen_textsize1"/>

    <TextView
        android:id="@+id/tv2_screening"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv1_screening"
        android:layout_below="@+id/tv1_screening"
        android:layout_marginTop="10dp"
        android:textColor="#878585"
        android:textSize="@dimen/Screen_textsize2"/>

    <TextView
        android:id="@+id/tv3_screening"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv2_screening"
        android:layout_below="@+id/tv2_screening"
        android:layout_marginTop="10dp"
        android:textColor="#5d5d5d"
        android:textSize="@dimen/Screen_textsize2"/>

    <TextView
        android:id="@+id/tv4_screening"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv3_screening"
        android:layout_below="@+id/tv3_screening"
        android:layout_marginTop="10dp"
        android:textColor="#878585"
        android:textSize="@dimen/Screen_textsize2"/>

</RelativeLayout>