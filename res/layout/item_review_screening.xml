<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:paddingTop="10dp"
	android:paddingBottom="20dp"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/iv1_review_screening"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="22dp"
        android:src="@drawable/banner3" />

    <TextView
        android:id="@+id/tv1_review_screening"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/iv1_review_screening"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/iv1_review_screening"
        android:text="TextView"
        android:textColor="#5d5d5d"
        android:textSize="32sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv2_review_screening"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv2_review_screening"
        android:layout_alignRight="@+id/tv1_review_screening"
        android:src="@drawable/icon_information" />

    <TextView
        android:id="@+id/tv2_review_screening"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv1_review_screening"
        android:layout_alignLeft="@+id/tv1_review_screening"
        android:layout_marginBottom="14dp"
        android:text="TextView"
        android:textColor="#878585"
        android:textSize="26sp"
        android:textStyle="bold" />

</RelativeLayout>