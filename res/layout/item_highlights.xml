<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/highlights_gride_height"
    android:gravity="center_vertical|center_horizontal"
    android:paddingBottom="15dp"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/high_image"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/high_image"
        android:scaleType="fitXY"
        android:contentDescription="@string/image_contentDescription"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/high_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/high_image"
        android:layout_alignLeft="@+id/high_image"
        android:textColor="#5d5d5d"
        android:layout_marginTop="8sp"
        android:textSize="@dimen/high_title"/>
    
    <TextView 
        android:id="@+id/high_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/high_title"
        android:layout_alignLeft="@+id/high_title"
        android:lines="2"
        android:textSize="@dimen/high_content"
        android:ellipsize="end"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"
        />
</RelativeLayout>
