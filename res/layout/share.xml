<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/share_iv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/share_tv"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@+id/share_iv2"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/image_contentDescription"
        android:src="@drawable/mm" />

    <ImageView
        android:id="@+id/share_iv3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/share_tv"
        android:layout_marginLeft="30dp"
         android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/share_iv2"
        android:contentDescription="@string/image_contentDescription"
        android:src="@drawable/qq" />

    <ImageView
        android:id="@+id/share_iv2"
        android:layout_width="70dp"
        android:layout_height="70dp"
         android:layout_marginTop="30dp"
        android:layout_above="@+id/share_tv4"
        android:layout_alignLeft="@+id/share_btn"
        android:src="@drawable/fr" />

    <TextView
        android:id="@+id/share_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/share_iv2"
        android:layout_below="@+id/share_iv2"
        android:layout_marginTop="10dp"
        android:text="微信好友" />

    <TextView
        android:id="@+id/share_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/share_iv"
        android:layout_below="@+id/share_iv"
        android:layout_marginTop="10dp"
        android:text="朋友圈" />

    <TextView
        android:id="@+id/share_tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/share_iv3"
        android:layout_below="@+id/share_iv3"
        android:layout_marginTop="10dp"
        android:text="QQ好友" />

    <ImageView
        android:id="@+id/share_iv4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/share_tv2"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/image_contentDescription"
        android:src="@drawable/line4" />

    <Button
        android:id="@+id/share_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/share_iv4"
        android:layout_centerHorizontal="true"
        android:background="#00000000"
        android:text="取消" />

    <TextView
        android:id="@+id/share_tv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:text="分享到" />

</RelativeLayout>